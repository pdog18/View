            <size
                android:height="3dp"
                android:width="3dp" />

            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <item
        android:bottom="0px"
        android:left="0px"
        android:right="0px"
        android:top="60dp">
        <shape android:shape="rectangle" >
            <size
                android:height="3dp"
                android:width="3dp" />

            <solid android:color="@android:color/white" />
        </shape>
    </item>

