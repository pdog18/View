<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a18.path.number.NumberActivity">

    <com.example.a18.path.number.NumberAnim
        android:id="@+id/na"
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </com.example.a18.path.number.NumberAnim>

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


    <com.example.a18.path.number.NumberAnimLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <com.example.a18.path.number.NumberAnim2
        android:id="@+id/num2"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <com.example.a18.path.number.ScrollNumber
        android:id="@+id/scroll3"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
