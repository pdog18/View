<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="300dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="151dp"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="22dp"
            android:textSize="54px"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="78dp">


            <!--回款金额 -->
            <!--数字-->
            <TextView
                android:id="@+id/tv_received_num"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="1,126.22" />
            <!--文字-->
            <TextView
                android:id="@+id/tv_received_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_received_num"
                android:text="回款金额(万元)"
                 />



            <TextView
                android:textSize="45px"
                android:text="75%"
                android:id="@+id/tv_received_progress"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="152dp" />

            <TextView
                android:layout_alignLeft="@id/tv_received_progress"
                android:text="回款进度"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_received_progress" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
